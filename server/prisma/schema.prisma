generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  username  String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  discussions Discussion[] @relation("DiscussionAuthor")
  operations   Operation[]  @relation("OperationAuthor")
}

model Discussion {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  startingNumber Float
  authorId  String   @db.ObjectId
  author    User     @relation("DiscussionAuthor", fields: [authorId], references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  operations Operation[]
}

model Operation {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  type      String   // "add", "subtract", "multiply", "divide"
  leftOperand Float
  rightOperand Float
  result    Float
  authorId  String   @db.ObjectId
  author    User     @relation("OperationAuthor", fields: [authorId], references: [id])
  discussionId String?  @db.ObjectId
  discussion   Discussion? @relation(fields: [discussionId], references: [id])
  parentOperationId String?  @db.ObjectId
  parentOperation   Operation? @relation("OperationTree", fields: [parentOperationId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  childOperations   Operation[] @relation("OperationTree")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

